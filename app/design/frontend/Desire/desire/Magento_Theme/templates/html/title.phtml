	<h5 class="artist_sec"><span class="title_creason"><?php if(!empty($_product)){echo $description = $this->helper('Magento\Catalog\Helper\Output')->productAttribute($myBlock->getProduct(), $myBlock->getProduct()->getShortDescription(), 'short-description');}?></span>
