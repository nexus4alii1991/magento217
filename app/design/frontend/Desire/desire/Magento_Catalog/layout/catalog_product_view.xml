<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="mage/gallery/gallery.css"/>
    </head>
    <update handle="catalog_product_opengraph" />
    <update handle="page_calendar"/>
    <body>
	<referenceBlock name="product.info.price">
        <block class="Magento\Framework\View\Element\Template" name="product_artist" template="Magento_Catalog::product/view/artist.phtml" after="product.info.review"></block>
		<block class="Magento\Framework\View\Element\Template" name="product_brand" template="Magento_Catalog::product/view/product_brand.phtml" before="product.price.final"></block>
	</referenceBlock>
	<referenceBlock name="content.bottom">
        <block class="Magento\Framework\View\Element\Template" name="may-like-slider" template="Magento_Catalog::product/may-like-slider.phtml"></block>
	</referenceBlock>
	<referenceBlock name="page.bottom">
		<block class="Magento\Framework\View\Element\Template" name="product_show_video" template="Magento_Catalog::product/product_show_video.phtml"></block>
		<block class="Magento\Framework\View\Element\Template" name="product_show_details" template="Magento_Catalog::product/product_show_details.phtml"></block>
		<block class="Magento\Framework\View\Element\Template" name="related_items_slider" template="Magento_Catalog::product/related_items_slider.phtml"></block>
		<block class="Magento\Framework\View\Element\Template" name="brought-together" template="Magento_Catalog::product/brought-together.phtml"></block>
	</referenceBlock>
    </body>
</page>
